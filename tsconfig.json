{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": false,
    "jsx": "react",
    "paths": {      
      "features/*": ["./src/script/features/*"],
      "assets/*": ["./src/assets/*"],      
      "themes/*": ["./src/script/app/styles/themes/*"],
      "src/*": ["./src/*"]
    },
  },
  "include": [
    "src",
    "tests/App.test.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}